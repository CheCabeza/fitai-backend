generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model exercises {
  id             String   @id
  name           String
  category       String
  muscleGroup    String
  equipment      String
  difficulty     String
  caloriesPerMin Float?
  description    String?
  instructions   String[]
  createdAt      DateTime @default(now())
}

model food_items {
  id        String   @id
  name      String
  calories  Float
  protein   Float?
  carbs     Float?
  fat       Float?
  fiber     Float?
  category  String?
  createdAt DateTime @default(now())
}

model meal_plans {
  id            String   @id
  userId        String
  date          DateTime
  meals         Json
  totalCalories Int
  createdAt     DateTime @default(now())
  users         users    @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model user_logs {
  id        String   @id
  userId    String
  date      DateTime @default(now())
  type      String
  data      Json
  calories  Int?
  createdAt DateTime @default(now())
  users     users    @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model users {
  id            String          @id
  email         String          @unique
  password      String
  name          String
  age           Int?
  weight        Float?
  height        Float?
  goal          String?
  activityLevel String?
  restrictions  String[]
  createdAt     DateTime        @default(now())
  updatedAt     DateTime
  meal_plans    meal_plans[]
  user_logs     user_logs[]
  workout_plans workout_plans[]
}

model workout_plans {
  id        String   @id
  userId    String
  date      DateTime
  exercises Json
  duration  Int?
  createdAt DateTime @default(now())
  users     users    @relation(fields: [userId], references: [id], onDelete: Cascade)
}
